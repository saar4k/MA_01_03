<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!-- geaendert von .DarkActionBar to NoActionbar -->
    <style name="Theme.MA_01_03" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/background</item>

        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">40sp</item> <!-- Textgröße -->
        <item name="android:buttonStyle">@style/mainButtons</item>

    </style>

    <style name="mainButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="shapeAppearanceOverlay">@style/roundedCorners</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
    </style>




    <style name="roundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% für komplett abgerundete Ecken -->
    </style>

</resources>